
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && isExistingDoc();
    }
    
    function hasValidUserProfileIdOnCreate(userId) {
      return request.resource.data.userProfileId == userId;
    }
    
    function isUserProfileIdImmutable() {
      // The userProfileId field should not be included in an update request, making it immutable.
      return !('userProfileId' in request.resource.data);
    }
    
    function isTeamMember() {
      return isSignedIn() && request.auth.uid in resource.data.memberIds;
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    function canUpdateOwnProfile() {
      // A user can update their profile as long as they are not changing protected fields.
      // We get the set of fields that are being changed in the update.
      let changedKeys = request.resource.data.diff(resource.data).affectedKeys();
      
      // We define the set of fields that are not allowed to be changed by the user.
      let protectedKeys = ['id', 'email', 'role', 'createdAt'];
      
      // The update is allowed if the set of changed keys does not contain any of the protected keys.
      // This is checked by ensuring the size of the intersection between the two sets is 0.
      return changedKeys.intersection(protectedKeys).size() == 0;
    }

    // --------------------------------------------------------------------
    // User Data Tree
    // --------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if (isOwner(userId) && canUpdateOwnProfile()) || isAdmin();
      allow delete: if false;

      match /timeEntries/{timeEntryId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && hasValidUserProfileIdOnCreate(userId);
        allow update: if isExistingOwner(userId) && isUserProfileIdImmutable();
        allow delete: if isExistingOwner(userId);
      }
      
      match /workplaceUpdateLogs/{logId} {
        allow create: if isOwner(userId);
        allow read, list, update, delete: if false;
      }
    }

    // --------------------------------------------------------------------
    // Teams Collection
    // --------------------------------------------------------------------

    match /teams/{teamId} {
      allow get: if isTeamMember() || isAdmin();
      allow list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
  }
}
