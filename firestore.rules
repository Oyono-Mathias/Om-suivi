
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && isExistingDoc();
    }
    
    function hasValidUserProfileIdOnCreate(userId) {
      return request.resource.data.userProfileId == userId;
    }
    
    function isTeamMember() {
      return isSignedIn() && request.auth.uid in resource.data.memberIds;
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    // --------------------------------------------------------------------
    // User Data Tree
    // --------------------------------------------------------------------

    match /users/{userId} {
      // Any signed-in user can list or get user profiles. This is required for the Team page and to resolve the isAdmin() recursion.
      // Write access is restricted to the owner or an admin.
      allow get, list: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();

      match /timeEntries/{timeEntryId} {
        allow read, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && hasValidUserProfileIdOnCreate(userId);
        allow update: if isExistingOwner(userId) || isAdmin();
        allow delete: if isExistingOwner(userId) || isAdmin();
      }
      
      match /workplaceUpdateLogs/{logId} {
        allow create: if isOwner(userId);
        allow read, list, update, delete: if false;
      }

      match /attendanceOverrides/{overrideId} {
        // Admins can read or write any attendance status.
        // Users can only read their own status.
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }

      match /leaveRequests/{leaveRequestId} {
        allow create: if isOwner(userId);
        allow read, list: if isOwner(userId) || isAdmin();
        allow update, delete: if isAdmin();
      }

      match /notifications/{notificationId} {
        // Users can read and update their own notifications.
        allow read, update: if isOwner(userId);
        // Admins can read and create notifications for any user.
        allow read, create: if isAdmin();
        // Deleting is not allowed.
        allow delete: if false;
      }
    }

    // --------------------------------------------------------------------
    // Teams Collection
    // --------------------------------------------------------------------

    match /teams/{teamId} {
      allow get: if isTeamMember() || isAdmin();
      allow list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    // --------------------------------------------------------------------
    // Settings Collection
    // --------------------------------------------------------------------
    
    match /settings/{settingId} {
        allow get: if isSignedIn();
        allow write: if isAdmin();
    }

    // --------------------------------------------------------------------
    // Announcements Collection
    // --------------------------------------------------------------------

    match /announcements/{announcementId} {
      allow list, get: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // --------------------------------------------------------------------
    // Leave Announcements Collection
    // --------------------------------------------------------------------

    match /leaveAnnouncements/{announcementId} {
      allow list, get: if isSignedIn();
      // A user can only create a leave announcement for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Announcements are immutable.
      allow update, delete: if false;
    }

    // --------------------------------------------------------------------
    // Absence Justifications Collection
    // --------------------------------------------------------------------

    match /absenceJustifications/{justificationId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, list, update: if isAdmin();
      allow delete: if false;
    }

    // --------------------------------------------------------------------
    // FAQ Collection
    // --------------------------------------------------------------------
    match /faq/{faqId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
  }
}
